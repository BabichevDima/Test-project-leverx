<mvc:View controllerName="dmitry.babichev.controller.ProductDetails"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:layout="sap.ui.layout" height="100%">
	<f:DynamicPage class="sapUiNoContentPadding">

		<!-- ProductDetails Title -->
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>SecondPageName}"/>
				</f:heading>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link text="{i18n>FirstPageName}" press="onNavToProductsOverview"/>
						<Link text="{i18n>SecondPageName}"/>
					</Breadcrumbs>
				</f:breadcrumbs>
				<f:actions>
					<Button text="Edit" type="Ghost" press=""/>
					<Button text="Delete" type="Reject" press=""/>
				</f:actions>
			</f:DynamicPageTitle>
		</f:title>

		<!-- ProductDetails Header -->
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<layout:HorizontalLayout allowWrapping="true">
					<layout:VerticalLayout class="sapUiMediumMarginEnd">
						<FlexBox direction="Row" alignItems="Start" class="sapUiTinyMarginBottom">
							<Label design="Bold" text="{i18n>Email}:" class="sapUiTinyMarginEnd"/>
							<Text text="{appView>Name}"/>
						</FlexBox>
						<FlexBox direction="Row" alignItems="Start" class="sapUiTinyMarginBottom">
							<Label design="Bold" text="{i18n>PhoneNumber}:" class="sapUiTinyMarginEnd"/>
							<Text text="{}"/>
						</FlexBox>
						<FlexBox direction="Row" alignItems="Start" class="sapUiTinyMarginBottom">
							<Label design="Bold" text="{i18n>Address}:" class="sapUiTinyMarginEnd"/>
							<Text text="sdsd d s gdf df g fd"/>
						</FlexBox>
					</layout:VerticalLayout>
					<layout:VerticalLayout>
						<FlexBox direction="Row" alignItems="Start" class="sapUiTinyMarginBottom">
							<Label design="Bold" text="{i18n>Established}:" class="sapUiTinyMarginEnd"/>
							<Text text="{ path: '', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'dd MMM YYYY'}}"/>
						</FlexBox>
						<FlexBox direction="Row" alignItems="Start" class="sapUiTinyMarginBottom">
							<Label design="Bold" text="{i18n>FloorArea}:" class="sapUiTinyMarginEnd"/>
							<Text text="{}"/>
						</FlexBox>
					</layout:VerticalLayout>
				</layout:HorizontalLayout>
			</f:DynamicPageHeader>
		</f:header>

		<!-- ProductDetails Content -->
		<f:content>
			<Table id="ProductsTable" sticky="HeaderToolbar,ColumnHeaders" inset="false" width="auto" mode="MultiSelect" items="{appView>Categories}">
				<headerToolbar>
					<Toolbar class="sapUiMediumMarginTop">
						<Title text="Categories" level="H2"/>
						<ToolbarSpacer/>
						<SearchField search="onProductSearch" placeholder="{i18n>PlaceholderSerchProduct}" width="300px"/>
						<Button type="Accept" icon="sap-icon://add" text="{i18n>ByttonAdd}" press="onCreateElementPress('Products')"/>
						<Button type="Reject" icon="sap-icon://delete" text="{i18n>ByttonRemove}" press="" enabled="false" class="sapUiSmallMarginBeginEnd"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<HBox alignItems="Center">
							<Button type="Transparent" icon="sap-icon://{appViewSort>/sortType/Name}" press="onSortButtonPress('Name')"/>
							<Text text="{i18n>Name}"/>
						</HBox>
					</Column>
				</columns>

				<items>
					<ColumnListItem type="Active" press="onNavProductDetailsPress">
						<HBox>
							<Text maxLines="1" text="{appView>Name}"/>
							<ToolbarSpacer/>
							<Button type="Transparent" enabled="false" icon="sap-icon://slim-arrow-right"/>
						</HBox>
					</ColumnListItem>
				</items>
			</Table>
		</f:content>

	</f:DynamicPage>
</mvc:View>